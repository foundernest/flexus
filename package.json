{
  "name": "flexus",
  "version": "0.1.0",
  "description": "A all-in-one (local and global) state management library for FounderNest",
  "main": "dist/index.ts",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest --config jest.config.json --env=node",
    "format": "prettier --write \"{src,__{tests,mocks}__}/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "coveralls": "yarn test --coverage && cat ./coverage/lcov.info | coveralls",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundernest/flexus.git"
  },
  "bugs": {
    "url": "https://github.com/foundernest/flexus/issues"
  },
  "homepage": "https://github.com/foundernest/flexus",
  "author": "Ricardo Domínguez Álvarez <r.dominguez.alvarez.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/react": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "coveralls": "^3.0.3",
    "install-peers": "^1.0.3",
    "jest": "^24.1.0",
    "jest-enzyme": "^7.0.1",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.3",
    "rollup": "^1.2.1",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^16.8.3"
  }
}
