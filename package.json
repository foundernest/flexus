{
  "name": "flexus",
  "version": "0.1.0-alpha.0",
  "description": "A flexible approach to Redux",
  "main": "dist/index.ts",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "context",
    "state",
    "management",
    "state-management",
    "store",
    "redux",
    "flexible"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest --env=node",
    "format": "prettier --write \"{src,__{tests,mocks}__}/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "coveralls": "yarn test --coverage && cat ./coverage/lcov.info | coveralls",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundernest/flexus.git"
  },
  "bugs": {
    "url": "https://github.com/foundernest/flexus/issues"
  },
  "homepage": "https://github.com/foundernest/flexus#readme",
  "author": "Ricardo Domínguez Álvarez <r.dominguez.alvarez.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "@types/react": "^16.8.20",
    "@types/react-test-renderer": "^16.8.2",
    "coveralls": "^3.0.4",
    "install-peers": "^1.0.3",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "rollup": "^1.15.5",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  }
}
